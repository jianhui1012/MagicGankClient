<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--状态栏的颜色 -->
    <attr name="baseStatusBarColor" format="reference"></attr>
    <!-- 响应drawable状态的textView-->
    <declare-styleable name="DrawableStateTextView">
        <attr name="onSelect" format="boolean"></attr>
        <attr name="onSelectLock" format="boolean"></attr>
        <attr name="disable" format="boolean"></attr>
    </declare-styleable>
    <declare-styleable name="ProcessView">
        <!-- 进度条粗细-->
        <attr name="processBarSize" format="dimension"></attr>
        <!-- 进度条颜色-->
        <attr name="processBarColor" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="CheckBoxLayout">
        <attr name="itemLayout" format="reference"></attr>
    </declare-styleable>
    <!--圆形图片 -->
    <declare-styleable name="CircleImageView">
        <attr name="circleBorderWidth" format="dimension"></attr>
        <attr name="circleBorderColor" format="reference"></attr>
    </declare-styleable>
    <declare-styleable name="BaseRecycleView">
        <attr name="maxWeight" format="integer"></attr>
    </declare-styleable>

</resources>